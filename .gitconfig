[core]
  excludesfile = /Users/vid/.gitignore
  # Don't trust file modes ## cmdline: $ git config core.filemode false
  filemode = false
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[branch "master"]
  remote = origin
  merge = refs/heads/master
[user]
  name = Vid
  email = vid@uoregon.edu
#Add colors to your ~/.gitconfig file:
[color]
  ui = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  #Highlight whitespace in diffs
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
#Add aliases to your ~/.gitconfig file:
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  logv = log --graph --decorate --pretty=format:'%Cgreen%h%Creset %s %Cred%an%Creset %ar'
  ls = ls-files

  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard
[difftool "sourcetree"]    #Usage: git difftool -t sourcetree
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[difftool "diffmerge"]     #Usage: git difftool -t diffmerge
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
[mergetool "sourcetree"]  #Usage: git mergetool -t sourcetree
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
[mergetool "diffmerge"]  #Usage: git mergetool -t diffmerge
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = false
[branch]
  autosetupmerge = true
